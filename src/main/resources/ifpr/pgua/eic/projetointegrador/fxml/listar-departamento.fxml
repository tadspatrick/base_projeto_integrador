            </font>
         </Label>
         <TextArea fx:id="taDetalhes" prefHeight="200.0" prefWidth="200.0" />
         <ListView fx:id="ltvDepartamentos" onMouseClicked="#mostrarDetalhes" prefHeight="200.0" prefWidth="200.0" />
