      <Label text="SCE - Sistema de Controle de Estoque" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="20.0" />
         </font>
      </Label>
   </top>
   <center>
      <VBox alignment="TOP_CENTER" prefHeight="600.0" prefWidth="155.0" spacing="10.0" BorderPane.alignment="CENTER">
         <Pane prefHeight="78.0" prefWidth="135.0" />
